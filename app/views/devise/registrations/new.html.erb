<h2>Sign up</h2>

<%= semantic_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>

  <%= f.inputs do %>
    <%= f.input :email %>
    <%= f.input :password %>
  <% end %>

  <%= f.actions do %>
    <%= f.action :submit, :label => 'Sign up' %>
  <% end %>

<% end %>

<%= render "devise/shared/links" %>
